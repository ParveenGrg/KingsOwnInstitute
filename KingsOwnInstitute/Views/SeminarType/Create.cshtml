@model SeminarType

@{
    ViewData["Title"] = "Add New Seminar Type";
}

<form method="post" asp-action="Create">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Add New Seminar Type
            </h2>
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="TypeName" class="control-label"></label>
            <input asp-for="TypeName" class="form-control" />
            <span asp-validation-for="TypeName" class="text-danger"></span>
        </div>
        <button type="submit" value="Create" class="btn btn-primary" style="width: 150px">Create</button>
        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
    </div>
</form>



@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
