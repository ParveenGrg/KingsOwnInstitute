@model RegistrationInfo

@{
    ViewData["Title"] = "Delete Registration";
}

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete @Model.Attendee.Name</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Attendee.Name" class="control-label"></label>
            <input asp-for="@Model.Attendee.Name" class="form-control" disabled />
            <span asp-validation-for="@Model.Attendee.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Seminar.Name" class="control-label"></label>
            <input asp-for="@Model.Seminar.Name" class="form-control" disabled />
            <span asp-validation-for="@Model.Seminar.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="RegistrationDate" class="control-label"></label>
            <input asp-for="RegistrationDate" class="form-control" disabled />
            <span asp-validation-for="RegistrationDate" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-danger text-white" style="width: 150px">Delete</button>
        <a asp-controller="RegistrationInfo" asp-action="Index" class="btn btn-secondary" style="width: 150px">Back to List</a>
    </div>
</form>
