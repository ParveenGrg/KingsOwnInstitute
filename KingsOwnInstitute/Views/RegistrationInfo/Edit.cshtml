@model KingsOwnInstitute.Data.ViewModels.NewRegistrationViewModel

@{
    ViewData["Title"] = "Update Registration";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="border p-3 mt-4 row">
                <div class="row pb-2">
                    <h2 class="text-primary">Update Registration</h2>
                    <hr />
                </div>
                <div class="mb-3">
                    <label asp-for="AttendeeId" class="control-label"></label>
                    <select asp-for="AttendeeId" class="form-control" asp-items="ViewBag.Attendees"></select>
                    <span asp-validation-for="AttendeeId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="SeminarId" class="control-label"></label>
                    <select asp-for="SeminarId" class="form-control" asp-items="ViewBag.Seminars"></select>
                    <span asp-validation-for="SeminarId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="RegistrationDate" class="control-label"></label>
                    <input asp-for="RegistrationDate" type="date" class="form-control" />
                    <span asp-validation-for="RegistrationDate" class="text-danger"></span>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
                    <a asp-controller="RegistrationInfo" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
